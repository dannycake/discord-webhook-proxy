{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {},
    "typeRoots": [
      "src",
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
